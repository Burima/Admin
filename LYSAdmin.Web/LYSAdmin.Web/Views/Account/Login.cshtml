@model LYSAdmin.Model.AccountViewModel
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewBag.Title = "Login";
}


<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name">LYS</h1>

        </div>
        <h3>Welcome to LockYourStay</h3>
        <p>
            Perfectly designed and precisely prepared admin application where you can list your Estates.
        </p>
        <p>Login in. To see it in action.</p>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "login-form", @class = "m-t" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @if (ViewBag.Error != null)
                {

                    <div class="text-danger">@ViewBag.Error</div>
                }
            </div>
            <div class="form-group">
                @*@Html.TextBoxFor(m => m.Username, new { type = "text", placeholder = "Username", @class = "form-control", maxlength = "25", tabindex = "1" })*@
                <input type="email" class="form-control" placeholder="Username" required="" name="Username">
            </div>
            <div class="form-group">
                @*@Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Password", @class = "form-control", maxlength = "25", tabindex = "2" })*@
                <input type="password" class="form-control" placeholder="Password" required="" name="Password">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
            <a href='@Url.Action("ForgotPassword","Account")'><small>Forgot password?</small></a>
        }
        <p class="m-t"> <small><strong>Copyright</strong> LockYourStay &copy; 2015</small> </p>
    </div>
</div>





