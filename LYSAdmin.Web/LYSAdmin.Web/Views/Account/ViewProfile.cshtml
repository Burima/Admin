@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

<div class = "col-md-12">
    <div class="tabs-container">
        <ul class="nav nav-tabs">
            <li class="active">
                <a data-toggle="tab" href="#tab-1">Settings</a>
            </li>
            <li>
                <a data-toggle="tab" href="#tab-2">Basic Information</a>
            <li>
                <a data-toggle="tab" href="#tab-3">Photo</a>
            </li>
            <li>
                <a data-toggle="tab" href="#tab-4">Background Verification Details</a>
            </li>
        </ul>
        <div class="tab-content">
            @*tab 1 content*@
            <div id="tab-1" class="tab-pane active">
                <div class="row row-padding-top-5">
                    <div class="col-md-2">
                        <label>UserName</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="row row-padding-top-5">
                    <div class="col-md-2">
                        <label>Password</label>
                    </div>
                    <div class="col-md-2">
                        <label>***********</label>
                    </div>
                    <div class="col-md-4">
                        <button id="btnUpdatePassword" class="btn btn-primary">Change</button>
                    </div>
                </div>
                <div class="row row-padding-top-5">
                    <div class="col-md-2">
                        <label>Mobile Number</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <button id="btnVerify" class="btn btn-primary">Verify</button>
                    </div>
                </div>
                <div class="row row-padding-top-5">
                    <div class="col-md-offset-0">
                        <button id="btnSaveChanges" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </div>
            <div id="tab-2" class="tab-pane">
                <div class="row row-padding-top-5">
                    <div class="col-md-2">
                        <label>First Name</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="row row-padding-top-5">
                    <div class="col-md-2">
                        <label>Last Name</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="row row-padding-top-5">
                    <div class="col-md-2">
                        <label>Gender</label>
                    </div>
                    <div class="col-md-4">
                        <select class="form-control">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                  </div>
                <div class="row row-padding-top-5">
                    <div class="col-md-offset-0">
                        <button id="btnSaveChanges" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



