@model LYSAdmin.Model.RoomViewModel
@using Newtonsoft.Json;

<div class="col-sm-9">
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-primary pull-right" type="button" onclick="window.location.href='@Url.Action("Rooms", "Estate", new { operation = ""})'" tabindex="4">View All</button>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <h3 class="m-t-none m-b">Add new Room</h3>
          
            <br />
            @using (Html.BeginForm("AddRoom", "Estate", FormMethod.Post, new { role = "form", id = "add-room-form", style = "min-height:420px" }))
            {

                <div class="saving-progress hidden"><h4>Saved!</h4></div>
                if (Model != null && Model.PGDetails != null)
                {
                    foreach (var pgDetails in Model.PGDetails)
                    {
                        if (pgDetails.Houses != null && pgDetails.Houses.Count > 0)
                        {
                            foreach (var house in pgDetails.Houses)
                            {
                                <div class="form-group">

                                    <label>House Name</label>
                                    <select name="Room.HouseID" class="form-control">
                                        <option value="" disabled selected>Select House</option>
                                        <option value="@house.HouseID">@house.HouseName</option>
                                    </select>
                                </div>
                            }
                        }
                    }

                }

                <div class="form-group">
                    <label>Room Number</label>
                    @Html.TextBoxFor(m => m.Room.RoomNumber, new { type = "text", placeholder = "Enter room number", @class = "form-control input-large", maxlength = "50", tabindex = "2" })
                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                </div>
               
                <div class="form-group">
                    <select class="number-of-beds form-control " tabindex="1" name="Room.NoOfBeds">
                        <option value="" disabled selected>Beds</option>
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                    </select>
                </div>
                 <div class="form-group">
                    <label>Monthly Rent</label>
                    @Html.TextBoxFor(m => m.Room.MonthlyRent, new { type = "text", placeholder = "Rent", @class = "form-control input-large", maxlength = "50", tabindex = "2" })
                </div>
                 <div class="form-group">
                    <label>Deposit</label>
                    @Html.TextBoxFor(m => m.Room.Deposit, new { type = "text", placeholder = "Deposit", @class = "form-control input-large", maxlength = "50", tabindex = "3" })
                </div>
                
                <div class="form-group row-padding-top-5">
                    <div class="pull-right">
                        <button id="btnCancel" class="btn btn-white" onclick="window.location.href='@Url.Action("Room", "Estate")'" type="button" tabindex="5">Cancel</button>
                        <button id="btnAddRoom" class="btn btn-primary" type="button" tabindex="6">Save</button>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
<div class="col-sm-3">
    <div class="statistic-box">
        <h4>
            Project Beta progress
        </h4>
        <p>
            You have two project with not compleated task.
        </p>
        <div class="row text-center">
            <div class="col-lg-6">
                <canvas id="polarChart" width="80" height="80"></canvas>
                <h5>Kolter</h5>
            </div>
            <div class="col-lg-6">
                <canvas id="doughnutChart" width="78" height="78"></canvas>
                <h5>Maxtor</h5>
            </div>
        </div>
        <div class="m-t">
            <small>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
        </div>

    </div>
</div>



