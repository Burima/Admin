@model LYSAdmin.Model.HouseViewModel
@using Newtonsoft.Json;

<!--Center Content-->
<div class="col-sm-9">
    <h3 class="m-t-none m-b">Add new House</h3>
    <hr />
    @using (Html.BeginForm("AddHouse", "Estate", FormMethod.Post, new { role = "form", id = "add-basic-information-form", style = "min-height:420px" }))
    {
        <div class="ibox-content no-padding">
            <div class="panel-body no-padding">
                <div class="panel-group padding-botton-5-pc" id="accordion">
                    <!-- Start Basic Information -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h5 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseBasicInformation">Basic Information</a>
                            </h5>
                        </div>
                        <div id="collapseBasicInformation" class="panel-collapse collapse in">
                            <div class="panel-body ">
                                <div class="form-group">
                                    <label>Apartment</label>
                                    @*<input type="text" id="txtApartment" placeholder="Enter house name" class="form-control input-large" maxlength="50" tabindex="1" required name="House.HouseName">*@
                                    <select name="ApartmentID" class="form-control">
                                        <option value="" disabled selected>Select Apartment</option>
                                        @foreach (var apartment in Model.Apartments.OrderBy(m => m.ApartmentID))
                                        {

                                        <option blocks="@JsonConvert.SerializeObject(apartment.Blocks)" value="@apartment.ApartmentID">@apartment.ApartmentName</option>
                                        }
                                    </select>
                                </div>
                                <div id="divBlocks" class="form-group hidden">
                                    <label>Block</label>
                                    @*<input type="text" id="txtBlock" placeholder="Enter house name" class="form-control input-large" maxlength="50" tabindex="1" required name="House.HouseName">*@
                                    <span id="spnNoBlockFound" class="hidden"><br />You do not have any Block for this Apartment. Click <a>here</a> to add Block</span>
                                    <select id="ddlBlocks" name="BlockID" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <label>House Name</label>
                                    <input type="text" id="txtHouseName" placeholder="Enter house name" class="form-control" maxlength="50" tabindex="1" required name="House.HouseName">
                                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                                </div>
                                <div class="form-group">
                                    <label>Display Name</label>
                                    <input type="text" id="txtDisplayName" placeholder="Enter display name" class="form-control" maxlength="50" tabindex="1" required name="House.DisplayName">
                                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea rows="4" id="txtDescription" placeholder="Description" class="form-control" maxlength="500" tabindex="3" name="House.Description"></textarea>
                                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">500</span> characters left</div>
                                </div>
                                <div class="row-padding-top-5">
                                    <div class="pull-right">
                                        <button id="btnNextBasicInformation" class="btn btn-primary" type="button" tabindex="5">Next</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- End Basic Information -->
                    <!-- Start Locality -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a class="locality " data-toggle="collapse" data-parent="#accordion" href="#collapseLocality">Locality</a>
                            </h4>
                        </div>
                        <div id="collapseLocality" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-5">
                                        <label>Address</label>
                                    </div>
                                    <div class="col-md-5">
                                        <label>Landmark</label>
                                    </div>
                                    <div class="col-md-5">
                                        <input type="text" id="txtAddress" placeholder="Enter Address" class="form-control input-sm" maxlength="100" tabindex="1" required name="House.Address" autocomplete="off">
                                        <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                                    </div>
                                    <div class="col-md-5">
                                        <input type="text" id="txtLandmark" placeholder="Enter Landmark" class="form-control input-sm" maxlength="50" tabindex="1" required name="House.Landmark">
                                        <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                                    </div>
                                    <div class="col-md-2">
                                        <button id="btnNextLocality" class="btn btn-primary" type="button" tabindex="5" value="Geocode">Next</button>
                                    </div>
                                </div>
                                <div class="row row-padding-top-5">
                                    <div id="map-canvas" class="col-md-12"></div>
                                </div>
                            </div>

                        </div>
                    </div><!-- End Locality -->
                    <!-- Start Basic Amenities -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseBasicAmenities">Amenities</a>
                            </h4>
                        </div>
                        <div id="collapseBasicAmenities" class="panel-collapse collapse">
                            <div class="panel-body">
                                <!-- House Ammenities -->
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="hidden" value="0" name="House.HouseAmenities[0].HouseID">
                                        <input type="checkbox" value="true" name="House.HouseAmenities[0].AC">AC
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" value="true" name="House.HouseAmenities[0].Fridge">Fridge                                        
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Wifi">Wifi
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Washingmachine">Washing Machine                                        
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].AttachedBathrooms">Attached Bathrooms 
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].KitchenFacilityWithGas">Kitchen Facility with gas connection                                        
                                    </div>
                                </div>
                                <!-- TV -->
                                <div class="row">
                                    <div class="col-md-4">                                        
                                        <input type="checkbox" name="House.HouseAmenities[0].CommonTV">Common TV
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].IndividualTV">Individual TV                                                                              
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].LCDTVCableConnection">LCD TV with cable connection  
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Wardrobes">Wardrobes                                      
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].IntercomFacility">Intercom Facility
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].IroningWashingServices">Ironing and washing services
                                    </div>
                                </div>
                                <!-- Food Facility-->
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].LunchGiven">Lunch Given
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].BreakFastGiven">BreakFast Given
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].DinnerGiven">Dinner Given
                                    </div>
                                </div><!-- End Food Facility-->
                                <!-- Water Supply-->
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].WaterSupply">Water Supply                                    
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].HotAndColdWaterSupply">Hot and Cold Water Supply  
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].MinaralWater">Mineral water                                        
                                    </div>
                                </div><!-- End Water Supply-->
                                
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Aquaguard">Aqua Guard
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].HouseKeeping">House Keeping
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].RoomService">Room Service
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Newspaper">Newspaper
                                    </div> <!-- House Ammenities -->
                                    <!-- Society Ammenities-->
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].TwoWheelerOpenParking">Two Wheeler Open Parking
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].TwoWheelerClosedParking">Two wheeler closed parking
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].FourWheelerOpenParking">Four Wheeler Open Parking
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].FourWheelerCloseParking">Four wheeler closed parking                                        
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Lockers"> Lockers
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].GYM">GYM
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Lift">Lift
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Playground">Playground
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Clubhouse">Club house
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Partyhall">Party Hall
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Security">Security
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].SwimingPool">Swimming Pool
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].VideoSurveillance">Video Survillience
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].Powerbackup">Power Backup
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].EmergencyMedicalService">Emergency Medical Services
                                    </div><!-- End Society Ammenities-->
                                    <!-- Restriction -->
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].NonVegAllowed">Non Veg allowed
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].GuardianEntry">Parents allowed
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].NoSmoking">No Smoking
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].NoDrinking">No Drinking
                                    </div>
                                    <div class="col-md-4">
                                        <input type="checkbox" name="House.HouseAmenities[0].NoBoysEntry">No Boys Entry
                                    </div>
                                </div><!-- End Restriction -->                               
                                
                                <div class="row">
                                    <div class="col-md-12 row-padding-top-5">
                                        <button id="btnNextAmenities" class="btn btn-primary pull-right" type="button" tabindex="5">Next</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div><!-- End Basic Amenities -->
                    <!-- Start Gallery -->
                    @*<div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseGallery">Gallery</a>
                                </h4>
                            </div>
                            <div id="collapseGallery" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <div class="ibox-content">
                                            <form id="my-awesome-dropzone" class="dropzone" action="@Url.Action("FileUploadHandler", "Forms")" method="post" enctype="multipart/form-data">
                                                <div class="dropzone-previews"></div>
                                                <button id="btnSaveGallery" type="submit" class="btn btn-primary pull-right">Submit this form!</button>
                                            </form>
                                        </div>
                                    </div>

                            </div>
                        </div>*@<!-- End Gallery -->
                    <!-- Start Detail Information -->
                    <div class="panel panel-default ">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseAddRooms">Detail Information</a>
                            </h4>
                        </div>
                        <div id="collapseAddRooms" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-12"><h3>Tell us more about your property House</h3></div>
                                    <div class="col-md-12">
                                        <div><h4>Property Details</h4></div>
                                        <div class="col-md-4" style="padding-left:0px;">
                                            <select name="House.HouseDescriptions[0].NoOfRooms" class="form-control" tabindex="1">
                                                <option value="" disabled selected>Rooms</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <select name="House.HouseDescriptions[0].NoOfBathrooms" class="form-control" tabindex="1">
                                                <option value="" disabled selected>Bathrooms</option>
                                                <option value="0">0</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <select name="House.HouseDescriptions[0].NoOfBalconnies" class="form-control" tabindex="1">
                                                <option value="" disabled selected>Balconies</option>
                                                <option value="0">0</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div><h4>Gender</h4></div>
                                        <div class="col-md-4" style="padding-left:0px;">
                                            <select id="ddlGender" class="form-control" tabindex="1" required name="House.HouseDescriptions[0].Gender">
                                                <option value="" disabled selected>Select Gender</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12 hidden" id="divRoomdetails">

                                    </div>
                                    <div class="col-md-offset-7 col-md-5 row-padding-top-5">
                                        <button id="btnSaveDetailInformation" class="btn btn-primary pull-right" type="submit" tabindex="5">Done</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- End Detail Information -->

                </div>
            </div>
        </div>
    }
</div>

