@model LYSAdmin.Model.ApartmentViewModel

<div class="col-sm-9">
    <div class="row">
        <div class="col-lg-1 col-lg-offset-9 col-md-1 col-md-offset-9 col-sm-5 col-sm-offset-1 col-xs-5 col-xs-offset-1 ">
            <button class="btn btn-primary pull-right btn-show-add-apartment" type="button" tabindex="4">Add New</button>
        </div>
        <div class="col-lg-1 col-lg-offset-1 col-md-1 col-md-offset-1 col-sm-5 col-sm-offset-1 col-xs-5 col-xs-offset-1">
            <button class="btn btn-primary pull-right" type="button" onclick="window.location.href='@Url.Action("Apartments", "Estate")'" tabindex="4">View All</button>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <h3 class="m-t-none m-b">Update Apartment Info</h3>
            @*<p>Add new Apartment today for more expirience.</p>*@
            <br />
            @using (Html.BeginForm("EditApartment", "Estate", FormMethod.Post, new { role = "form", id = "edit-apartment-form", style = "min-height:420px" }))
            {

                <input id="hdnEditApartmentID" type="hidden" name="Apartment.ApartmentID" />
                <input id="hdnEditAreaID" type="hidden" name="Apartment.AreaID" />
                <input id="hdnEditCreatedOn" type="hidden" name="Apartment.CreatedOn" />
                <input id="hdnEditCreatedBy" type="hidden" name="Apartment.CreatedBy" />
                <input id="hdnEditOwnerID" type="hidden" name="Apartment.OwnerID" />
               

                <div class="form-group">
                    <label>Apartment Name</label>
                    <input type="text" id="txtEditApartmentName" placeholder="Enter apartment name" class="form-control input-large" maxlength="50" tabindex="1" required name="Apartment.ApartmentName">
                    @*@Html.TextBoxFor(m => m.ApartmentName, new { type = "text", placeholder = "Enter apartment name", @class = "form-control input-large", maxlength = "50", tabindex = "1" })*@
                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                </div>
                <div class="form-group">
                    <label>House No</label>
                    <input type="text" id="txtEditHouseNo" placeholder="Enter house no" class="form-control input-large" maxlength="50" tabindex="2" name="Apartment.HouseNo">
                    @*@Html.TextBoxFor(m => m.HouseNo, new { type = "text", placeholder = "Enter house no", @class = "form-control input-large", maxlength = "50", tabindex = "2" })*@
                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea rows="4" id="txtEditDescription" placeholder="Description" class="form-control input-large" maxlength="500" tabindex="3" name="Apartment.Description"></textarea>
                    @*@Html.TextAreaFor(m => m.Description, new { rows = "4", placeholder = "Description", @class = "form-control input-large", maxlength = "500", tabindex = "3" })*@
                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">500</span> characters left</div>
                </div>
                <div class="form-group row-padding-top-5">
                    <div class="pull-right">
                        <button id="btnEditCancel" class="btn btn-white" onclick="window.location.href='@Url.Action("Apartments", "Estate")'" type="button" tabindex="4">Cancel</button>
                        <button id="btnEditApartment" class="btn btn-primary" type="submit" tabindex="5">Save</button>
                    </div>
                </div>
                @*</form>*@
            }
        </div>
    </div>
</div>
<div class="col-sm-3">
    <div class="statistic-box">
        <h4>
            Project Beta progress
        </h4>
        <p>
            You have two project with not compleated task.
        </p>
        <div class="row text-center">
            <div class="col-lg-6">
                <canvas id="polarChart" width="80" height="80"></canvas>
                <h5>Kolter</h5>
            </div>
            <div class="col-lg-6">
                <canvas id="doughnutChart" width="78" height="78"></canvas>
                <h5>Maxtor</h5>
            </div>
        </div>
        <div class="m-t">
            <small>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
        </div>

    </div>
</div>
