@model LYSAdmin.Model.ApartmentViewModel
@using Newtonsoft.Json;

<div class="col-sm-9">
    <div class="row">
            <div class="col-md-12">
                <button class="btn btn-primary pull-right" type="button" onclick="window.location.href='@Url.Action("Apartments", "Estate")'" tabindex="4">View All</button>
            </div>
        </div>
    <div class="row">
        <div class="col-sm-8">
            <h3 class="m-t-none m-b">Add new Apartment</h3>
            @*<p>Add new Apartment today for more expirience.</p>*@
            <br />
            @using (Html.BeginForm("AddApartment", "Estate", FormMethod.Post, new { role = "form", id = "form-add-an-apartment", style = "min-height:420px", autocomplete = "off" }))
            {
                <div class="saving-progress hidden"><h4>Saved!</h4></div>
                <div class="form-group">
                    <label>PG/Hostel Name</label>
                    <select name="Apartment.PGDetailID" class="form-control">
                        <option value="" disabled selected>Select PG/Hostel</option>
                        @foreach (var pgDetail in Model.PGDetails.OrderBy(m => m.PGDetailID))
                        {

                            <option apartments="@JsonConvert.SerializeObject(pgDetail.Apartments)" value="@pgDetail.PGDetailID">@pgDetail.PGName</option>
                        }

                    </select>

                </div>
                <div class="form-group">
                    <label>Apartment Name</label>
                    <input type="text" id="txtApartmentName" placeholder="Enter apartment name" class="form-control input-large required charAlone" maxlength="50" tabindex="1" name="Apartment.ApartmentName" autocomplete="off" autofocus="autofocus">
                    @*@Html.TextBoxFor(m => m.Apartment.ApartmentName, new { type = "text", placeholder = "Enter apartment name", @class = "form-control input-large", maxlength = "50", tabindex = "1" })*@
                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                </div>
                <div class="form-group">
                    <label>House No</label>
                    <input type="text" id="txtHouseNo" placeholder="Enter house no" class="form-control input-large" maxlength="50" tabindex="2" name="Apartment.HouseNo" autocomplete="off">
                    @*@Html.TextBoxFor(m => m.HouseNo, new { type = "text", placeholder = "Enter house no", @class = "form-control input-large", maxlength = "50", tabindex = "2" })*@
                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">50</span> characters left</div>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea rows="4" id="txtDescription" placeholder="Description" class="form-control input-large" maxlength="500" tabindex="3" name="Apartment.Description" ></textarea>
                    @*@Html.TextAreaFor(m => m.Description, new { rows = "4", placeholder = "Description", @class = "form-control input-large", maxlength = "500", tabindex = "3" })*@
                    <div class="row-space-top-1 max-character-entered"><span class="span-char-left">500</span> characters left</div>
                </div>
                <div class="form-group row-padding-top-5">
                    <div class="pull-right">
                        <button id="btnCancel" class="btn btn-white" onclick="window.location.href='@Url.Action("Apartments", "Estate")'" type="button" tabindex="4">Cancel</button>
                        <button id="btnAddApartment" class="btn btn-primary" type="button" tabindex="5">Save</button>
                    </div>
                </div>
                @*</form>*@
            }
        </div>
    </div>
</div>
<div class="col-sm-3">
    <div class="statistic-box">
        <h4>
            Project Beta progress
        </h4>
        <p>
            You have two project with not compleated task.
        </p>
        <div class="row text-center">
            <div class="col-lg-6">
                <canvas id="polarChart" width="80" height="80"></canvas>
                <h5>Kolter</h5>
            </div>
            <div class="col-lg-6">
                <canvas id="doughnutChart" width="78" height="78"></canvas>
                <h5>Maxtor</h5>
            </div>
        </div>
        <div class="m-t">
            <small>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>
        </div>

    </div>
</div>
