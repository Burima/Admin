@using (Html.BeginForm("ViewProfile", "User", FormMethod.Post, new { role = "form", id = "view-profile-form", style = "min-height:420px" }))
{
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row  border-bottom white-bg dashboard-header">
            <div class="col-md-10">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a data-toggle="tab" href="#tab-1">Settings</a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#tab-2">Basic Information</a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#tab-3">Photo</a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#tab-4">Background Verification Details</a>
                        </li>
                    </ul>
                    <div class="tab-content gray-bg padding-left-3">
                        @*tab 1 content*@
                        <div id="tab-1" class="tab-pane active">
                            <div class="row">
                                <div class="col-md-6">
                                    <br />
                                    <div class="form-group">
                                        <label>Email ID</label>
                                        <input type="email" class="form-control input-sm" placeholder="Enter Username" value="@Model.Email" name="Email">
                                        <div class="pull-right">
                                            @if (Model.EmailConfirmed)
                                            {
                                                <label><i class="fa fa-check"></i>Verified</label>
                                            }
                                            else
                                            {
                                                <a id="linkVerifyEmail">Verify</a>
                                            }

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Change Password</label>
                                        <a id="changePassword" href="#">Update</a>
                                    </div>
                                    <div class="form-group">
                                        <label>Mobile Number</label>
                                        <input class="form-control input-sm numbersAlone" maxlength="10" placeholder="Enter Mobile Number" value="@Model.PhoneNumber" name="PhoneNumber" required>
                                        <div class="pull-right">
                                            @if (Model.PhoneNumberConfirmed)
                                            {
                                                <label><i class="fa fa-check"></i>Verified</label>
                                            }
                                            else
                                            {  
                                                 <a id="verifyMobile" href="#">Verify</a>
                                            }
                                          
                                        </div>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                        @*tab 2 content*@
                        <div id="tab-2" class="tab-pane">
                            <div class="row">
                                <div class="col-md-6">
                                    <br />
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control input-sm charAlone" placeholder="First Name" value="@Model.FirstName" name="FirstName">
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control input-sm charAlone" placeholder="Last Name" value="@Model.LastName" name="LastName">
                                    </div>
                                    <div class="form-group">
                                        <label>I am</label>
                                        <select class="form-control input-sm" name="Gender">
                                            <option value="" disabled>Select Gender</option>
                                            <option @(Model.Gender == 1 ? "selected" : "") value="1">Male</option>
                                            <option @(Model.Gender == 2 ? "selected" : "") value="2">Female</option>
                                        </select>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                        @*tab 3 content*@
                        <div id="tab-3" class="tab-pane">
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div id="divFile" class="col-lg-8 col-md-8 col-sm-12 col-xs-12 row-padding-top-5">
                                            <label for="fileProfile" id="fileLabel">
                                                <input class="txtFile" id="fileProfile" name="fileProfile" type="file" style="display:none">
                                                <p class="btn btn-primary">Choose File</p>
                                            </label>
                                            <div><div id="photoFilePath" class="filePath pull-left">No File Chosen</div><span id="spnRemove" onclick="fnRemove()" style="cursor:pointer; color:gray; display:none">x</span></div>
                                            <br />
                                            <img draggable="false" id="imgProfile" style="display:inline-block; height:100px; width:100px; margin: 0 5px 0 10px;" src="@Url.Action(Model.ProfilePicture)"/>
                                            <input type="hidden" id="profilePic" name="ProfilePicture" />
                                        </div>
                                    </div>
                                    <div id="divErrorFileFormatIMG" style="display:none" class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                        </div>
                                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                            <span id="spnErrorFileFormatIMG" class="error" style="display:none;color:red;"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*tab 4 content*@
                        <div id="tab-4" class="tab-pane">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row form-group row-padding-top-5">
                                        <div class="col-md-5">
                                            <label>Present Address</label>
                                        </div>
                                        <div class="col-md-5">
                                            <label>Permanent Address</label>
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" class="form-control input-sm" placeholder="Present Address" value="@Model.PresentAddress" name="PresentAddress">
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" class="form-control input-sm" placeholder="Present Address" value="@Model.PermanentAddress" name="PermanentAddress">
                                        </div>
                                        <div class="col-md-5 row-space-top-1">
                                            <label>GovernmentID Type</label>
                                        </div>
                                        <div class="col-md-5 row-space-top-1">
                                            <label>ID Number</label>
                                        </div>
                                        <div class="col-md-5">
                                            <select class="form-control input-sm" name="GovtIDType">
                                                <option value="" disabled>Select ID Type</option>
                                                <option @(Model.GovtIDType == 1 ? "selected" : "") value="1" >PAN Card</option>
                                                <option @(Model.GovtIDType == 2 ? "selected" : "") value="2">Voter ID Card</option>
                                                <option @(Model.GovtIDType == 3 ? "selected" : "") value="3">Driving License</option>
                                                <option @(Model.GovtIDType == 4 ? "selected" : "") value="4">Aadhar Card</option>
                                                <option @(Model.GovtIDType == 5 ? "selected" : "") value="5">Passport</option>
                                            </select>
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" class="form-control input-sm" placeholder="Identity Proof Number" value="@Model.GovtID" name="GovtID">
                                        </div>
                                        <div class="col-md-2">
                                            <button class="btn btn-primary btn-circle" type="button">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                        <div class="col-md-5 row-space-top-1">
                                            <label>Profession</label>
                                        </div>
                                        <div class="col-md-5 row-space-top-1">
                                            <label>Office Address</label>
                                        </div>
                                        <div class="col-md-5">
                                            <input type="radio" name="UserProfession" value="1" @(Model.UserProfession == 1 ? "checked" : "")>Self-Employed
                                            <input type="radio" name="UserProfession" value="2" @(Model.UserProfession == 2 ? "checked" : "")>Salaried
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" class="form-control input-sm" placeholder="Employee Address" value="@Model.OfficeLocation" name="OfficeLocation">
                                        </div>
                                        <div class="col-md-5 row-space-top-1">
                                            <label>Current Employer</label>
                                        </div>
                                        <div class="col-md-5 row-space-top-1">
                                            <label>Employee ID</label>
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" class="form-control input-sm charAlone" placeholder="Current Employer Name" value="@Model.CurrentEmployer" name="CurrentEmployer">
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" class="form-control input-sm numbersAlone" placeholder="Employer ID" value="@Model.EmployeeID" name="EmployeeID">
                                        </div>

                                        <div class="col-md-5 row-space-top-1">
                                            <label>Highest Education</label>
                                        </div>
                                        <div class="col-md-5 row-space-top-1">
                                            <label>Institution Name</label>
                                        </div>
                                        <div class="col-md-5">
                                            <select class="form-control input-sm" name="HighestEducation">
                                                <option value="" disabled>Select Highest Education</option>
                                                <option @(Model.HighestEducation == "PostGraduate" ? "selected" : "") value="PostGraduate">Post Graduate</option>
                                                <option @(Model.HighestEducation == "Graduate" ? "selected" : "") value="Graduate">Graduate</option>
                                                <option @(Model.HighestEducation == "UnderGraduate" ? "selected" : "") value="UnderGraduate">Under Graduate</option>
                                            </select>
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" class="form-control input-sm charAlone" placeholder="Institution Name" value="@Model.InstitutionName" name="InstitutionName">
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                       
                        
                    </div>
                    @*Save button*@
                    <div class="col-md-10 gray-bg">
                        <div class="form-group row-padding-top-5 padding-left-3">
                            <div>
                                <button id="btnSave" class="btn btn-primary" type="submit" tabindex="5">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
}
@*modal for changing password*@
<div class="modal inmodal" id="modalChangePassword" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <h4 class="modal-title">Change Password</h4>
                <button type="button" id="btnVerificationClose" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            @using (Ajax.BeginForm("ChangePassword", "Account", FormMethod.Post, new AjaxOptions { HttpMethod = "POST" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label>Current Password</label>
                        <input id="txtCurrentPassword" type="password" class="form-control" placeholder="Current Password" name="ManageUserViewModel.OldPassword" />
                    </div>
                    <div class="form-group">
                        <label>New Password</label>
                        <input id="txtNewPassword" type="password" class="form-control" placeholder="New Password" name="ManageUserViewModel.NewPassword" />
                    </div>
                    <div class="form-group">
                        <label>Retype Password</label>
                        <input id="txtRetypePassword" type="password" class="form-control" placeholder="Retype Password" name="ManageUserViewModel.ConfirmPassword" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnChangePassword">Save changes</button>
                </div>
            }
        </div>
    </div>
</div>

